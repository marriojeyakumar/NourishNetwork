<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".OrganizationProfileActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#E1E3E5"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/profileIcon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/profile_icon" />

                <TextView
                    android:id="@+id/textViewOrganizationName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/profileIcon"
                    android:layout_below="@+id/buttonEditProfile"
                    android:fontFamily="@font/bunglee"
                    android:includeFontPadding="false"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/buttonEditProfile"
                    android:layout_toEndOf="@+id/profileIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Edit Profile"
                    android:layout_gravity="end"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/orange"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewOrganizationInfoHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Organization Info"
                    android:textStyle="bold"
                    android:textColor="@color/dark_grey"
                    android:padding="16dp"
                    android:textSize="40sp"
                    android:layout_margin="8dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/very_light_grey"
                    android:padding="16dp"
                    android:layout_margin="8dp">
                    <TextView
                        android:id="@+id/textViewOrganizationType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Organization Type: None" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/very_light_grey"
                    android:padding="16dp"
                    android:layout_margin="8dp">
                    <TextView
                        android:id="@+id/textViewAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address: None" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/very_light_grey"
                    android:padding="16dp"
                    android:layout_margin="8dp">
                    <TextView
                        android:id="@+id/textViewContactPerson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Person: None" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textViewContactEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Email: None"
                    android:background="@color/very_light_grey"
                    android:padding="16dp"
                    android:layout_margin="8dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/very_light_grey"
                    android:padding="16dp"
                    android:layout_margin="8dp">
                    <TextView
                        android:id="@+id/textViewContactPhoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Phone Number: None" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textViewOperatingHours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Operating Hours: None"
                    android:background="@color/very_light_grey"
                    android:padding="16dp"
                    android:layout_margin="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewFoodCapacityHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Food Needs and Capacity"
                    android:textStyle="bold"
                    android:textColor="@color/dark_grey"
                    android:padding="16dp"
                    android:textSize="40sp"
                    android:layout_margin="8dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/very_light_grey"
                    android:padding="16dp"
                    android:layout_margin="8dp">
                    <TextView
                        android:id="@+id/textViewTypesOfFoodAccepted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Types of Food Accepted: None" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/very_light_grey"
                    android:padding="16dp"
                    android:layout_margin="8dp">
                    <TextView
                        android:id="@+id/textViewFoodStorageCapacity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food Storage Capacity: None" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/very_light_grey"
                    android:padding="16dp"
                    android:layout_margin="8dp">
                    <TextView
                        android:id="@+id/textViewEstimatedFoodDemand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estimated Food Demand: None" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/very_light_grey"
                    android:padding="16dp"
                    android:layout_margin="8dp">
                    <TextView
                        android:id="@+id/textViewTransportationAvailability"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transportation Availability: None" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewFoodDistributionHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Organizationâ€™s Food Distribution Plan"
                    android:textStyle="bold"
                    android:textColor="@color/dark_grey"
                    android:padding="16dp"
                    android:textSize="40sp"
                    android:layout_margin="8dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/very_light_grey"
                    android:padding="16dp"
                    android:layout_margin="8dp">
                    <TextView
                        android:id="@+id/textViewWhoFoodServes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Who the Food Will Serve: None" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/very_light_grey"
                    android:padding="16dp"
                    android:layout_margin="8dp">
                    <TextView
                        android:id="@+id/textViewDistributionLocations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distribution Locations: None" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/very_light_grey"
                    android:padding="16dp"
                    android:layout_margin="8dp">
                    <TextView
                        android:id="@+id/textViewDistributionTiming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distribution Timing: None" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bottom_menu_bg"
        android:elevation="2dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/nav_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/organization_menu" />

</RelativeLayout>
