<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusinessProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".BusinessProfileActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Business Header Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#E1E3E5"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/profileIcon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/textViewBusinessName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/profileIcon"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/buttonEditProfile"
                    android:layout_toEndOf="@+id/profileIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Edit Profile"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/orange"/>
            </RelativeLayout>

            <!-- Business Information Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewBusinessInfoHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Business Information"
                    android:textStyle="bold"
                    android:textColor="@color/dark_grey"
                    android:padding="16dp"
                    android:textSize="40sp"
                    android:layout_margin="8dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/very_light_grey"
                    android:padding="16dp"
                    android:layout_margin="8dp">
                    <TextView
                        android:id="@+id/textViewBusinessType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Business Type: None" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/very_light_grey"
                    android:padding="16dp"
                    android:layout_margin="8dp">
                    <TextView
                        android:id="@+id/textViewBusinessAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address: None" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/very_light_grey"
                    android:padding="16dp"
                    android:layout_margin="8dp">
                    <TextView
                        android:id="@+id/textViewContactPerson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Person: None" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textViewContactPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Phone: None"
                    android:background="@color/very_light_grey"
                    android:padding="16dp"
                    android:layout_margin="8dp" />

            </LinearLayout>

            <!-- Surplus Food Information Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewSurplusFoodInfoHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Surplus Food Information"
                    android:textStyle="bold"
                    android:textColor="@color/dark_grey"
                    android:padding="16dp"
                    android:textSize="40sp"
                    android:layout_margin="8dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/very_light_grey"
                    android:padding="16dp"
                    android:layout_margin="8dp">
                    <TextView
                        android:id="@+id/textViewSurplusTypes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Types of Surplus Food: None" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/very_light_grey"
                    android:padding="16dp"
                    android:layout_margin="8dp">
                    <TextView
                        android:id="@+id/textViewSurplusQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estimated Quantity: None" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/very_light_grey"
                    android:padding="16dp"
                    android:layout_margin="8dp">
                    <TextView
                        android:id="@+id/textViewPickupTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pickup Availability Time: None" />
                </RelativeLayout>
            </LinearLayout>

            <!-- Distribution Preferences Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewDistributionPreferencesHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Distribution Preferences"
                    android:textStyle="bold"
                    android:textColor="@color/dark_grey"
                    android:padding="16dp"
                    android:textSize="40sp"
                    android:layout_margin="8dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/very_light_grey"
                    android:padding="16dp"
                    android:layout_margin="8dp">
                    <TextView
                        android:id="@+id/textViewPreferredMethod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preferred Distribution Method: None" />
                </RelativeLayout>

            </LinearLayout>

            <!-- Spacer at the Bottom -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bottom_menu_bg"
        android:elevation="2dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/nav_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/business_menu" />

</RelativeLayout>
